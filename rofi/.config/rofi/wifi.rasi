configuration {
  columns: 1;
  font: "SF Pro Display 16";
  bw: 0;
  location: 0;
  padding: 0;
  fixed-num-lines: true;
  lines: 5;
  hide-scrollbar: true;
  fullscreen: false;
  fake-transparency: false;
  scroll-method: 1;
  click-to-exit: true;
  show-match: false;
}

* {
  background-color: #1f1f1f;
  text-color: #fefefe;
}

#window {
  padding: 20px;
  width: 700px;
}

listview {
  fixed-height: 0;
  border:       0px;
  scrollbar:    false;
  padding:      2px 0px 0px;
}

element {
  border: 0;
  padding: 15px;
}

prompt {
  text-color: #feba12;
  font: "Product Sans 20";
  padding: 5px;
  scrollbar:    false;
}

inputbar,
textbox-prompt-colon,
entry {
  background-color: #404040;
  padding: 10px;
}

#element.selected {
  background-color: #1F1F1F;
  text-color: #feba12;
}
